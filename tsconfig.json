{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "include": ["./src/**/*"]
}